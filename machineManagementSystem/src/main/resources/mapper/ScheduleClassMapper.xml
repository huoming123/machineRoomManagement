<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.design.machineManagementSystem.mapper.ScheduleClassMapper">

    <resultMap type="com.design.machineManagementSystem.pojo.ScheduleClass" id="ScheduleClassMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="courseName" column="course_name" jdbcType="VARCHAR"/>
        <result property="teacherId" column="teacher_id" jdbcType="INTEGER"/>
        <result property="startTime" column="start_time" jdbcType="VARCHAR"/>
        <result property="endTime" column="end_time" jdbcType="VARCHAR"/>
        <result property="roomNo" column="room_no" jdbcType="VARCHAR"/>
        <result property="createdAt" column="created_at" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="VARCHAR"/>
        <result property="weekDay" column="week_day" jdbcType="VARCHAR"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>

    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ScheduleClassMap">
        select
          id, course_name, teacher_id, start_time, end_time, room_no, created_at, created_by, week_day
        from schedule_class
        where id = #{id}
    </select>



    <!--新增所有列-->
    <insert id="increased" keyProperty="id" useGeneratedKeys="true">
        insert into schedule_class(course_name, teacher_id, start_time, end_time, room_no, created_at, created_by, week_day)
        values (#{courseName}, #{teacherId}, #{startTime}, #{endTime}, #{roomNo}, now(), #{createdBy}, #{weekDay})
    </insert>
        <!--用select进行分页查询-->
      <select id="getPageSearchByCondition" resultMap="ScheduleClassMap">
        select a.*,b.user_name  from schedule_class a,teacher b where a.teacher_id=b.id
          <if test="page.key.weekDay != null and page.key.weekDay != ''">
              and  a.week_day = #{page.key.weekDay}
          </if>
          <if test="page.key.teacherId != null">
          and  a.teacher_id = #{page.key.teacherId}
      </if>
          <if test="page.key.roomNo != null">
              and  a.room_no = #{page.key.roomNo}
          </if>
            <!--排序 desc是降序-->
        order by
        a.id desc
        <!--分页查询-->
      
        limit  #{page.startNum} , #{page.pageSize}
    </select>
     <!--分页查询条数-->
    <select id="getPageSearchCount" resultType="int">
        select count(a.id) as count  from schedule_class a,teacher b where a.teacher_id=b.id
        <if test="page.key.weekDay != null and page.key.weekDay != ''">
            and  a.week_day = #{page.key.weekDay}
        </if>
        <if test="page.key.teacherId != null">
            and  a.teacher_id = #{page.key.teacherId}
        </if>
        <if test="page.key.roomNo != null">
            and  a.room_no = #{page.key.roomNo}
        </if>
    </select>

   

    <!--通过主键修改数据-->
    <update id="edit">
        update schedule_class
        <set>
            <if test="courseName != null and courseName != ''">
                course_name = #{courseName},
            </if>
            <if test="teacherId != null">
                teacher_id = #{teacherId},
            </if>
            <if test="startTime != null and startTime != ''">
                start_time = #{startTime},
            </if>
            <if test="endTime != null and endTime != ''">
                end_time = #{endTime},
            </if>
            <if test="roomNo != null and roomNo != ''">
                room_no = #{roomNo},
            </if>
            <if test="createdAt != null">
                created_at = #{createdAt},
            </if>
            <if test="createdBy != null and createdBy != ''">
                created_by = #{createdBy},
            </if>
            <if test="weekDay != null and weekDay != ''">
                week_day = #{weekDay},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from schedule_class where id = #{id}
    </delete>
     <select id="getByDate" resultMap="ScheduleClassMap">
         select * from schedule_class where start_time=#{startTime} and end_time=#{endTime} and week_day=#{weekDay} ;
     </select>
</mapper>

